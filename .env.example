# Ollama Configuration
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3

# Workspace Configuration
WORKSPACE_DIR=./workspace

# Safety Configuration
ALLOW_SHELL_COMMANDS=true
SHELL_COMMAND_ALLOWLIST=ls,cat,echo,pwd,python,python3,node,npm,git,curl,wget,head,tail,grep,find

# AgentBench Configuration
# Enable strict benchmark compliance mode for AgentBench tests
BENCHMARK_MODE=false
# Task type detection: auto, arithmetic, logic, problem_solving, conversation
BENCHMARK_TASK_TYPE=auto
# Maximum validation retry attempts
BENCHMARK_MAX_RETRIES=2
